      /* Product Container */
      .product-container {
        display: flex;
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
        gap: 30px;
      }

      /* Main Image Section */
      .main-image-container {
        flex: 1;
        position: relative;
        max-width: 500px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .main-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 12px;
      }
      .main-image-container {
        position: relative;
      }
      .zoomed-image-container {
        display: none;
        position: absolute;
        top: 0;
        left: 110%; 
        width: 300px;
        height: 300px;
        overflow: hidden;
        border: 2px solid #ddd;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 10;
        background: #fff;
      }

      .zoomed-image {
        position: absolute;
        width: 800px; 
        height: auto;
        transform-origin: 0 0; 
        transition: transform 0.1s ease; 
      }

      .product-thumbnails {
        display: flex;
        gap: 10px;
        margin-top: 20px;
        justify-content: center;
      }

      .thumbnail-img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 5px;
        cursor: pointer;
        transition: border-color 0.3s, transform 0.2s ease;
      }

      .thumbnail-img:hover {
        border-color: #4caf50;
        transform: scale(1.1);
      }

      .product-details {
        flex: 1;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 20px;
      }

      .product-title {
        font-size: 32px;
        margin: 0;
      }

      .product-category {
        color: #666;
        margin-bottom: 15px;
      }

      .product-price {
        font-size: 20px;
        font-weight: 600;
        color: #4caf50;
      }

      .product-rating {
        color: #ffc107;
        font-size: 18px;
      }

      .product-description {
        color: #666;
        line-height: 1.6;
      }

      .button-group {
        display: flex;
        gap: 20px;
        margin-top: 20px;
      }

      .add-to-cart,
      .wishlist {
        background-color: #fff;
        border: 2px solid #4caf50;
        color: #4caf50;
        padding: 12px 25px;
        border-radius: 25px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 500;
        transition: background-color 0.3s, color 0.3s;
        font-size: 16px;
      }

      .add-to-cart:hover {
        background-color: #4caf50;
        color: #fff;
      }

      .wishlist {
        border-color: #dc3545;
        color: #dc3545;
      }

      .wishlist:hover {
        background-color: #dc3545;
        color: #fff;
      }

      .add-to-cart i,
      .wishlist i {
        font-size: 18px;
      }

     
