<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify OTP</title>
    <style>
      body {
        background-color: #3b5d50;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: #fff;
        margin: 0;
      }
      .otp-container {
        background-color: #fff;
        color: #333;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
      }
      h2 {
        text-align: center;
        margin-bottom: 20px;
      }
      label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
      }
      input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        font-size: 14px;
      }
      button {
        width: 100%;
        padding: 12px;
        background-color: #3b5d50;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
      }
      button:hover {
        background-color: #2e4b41;
      }
      .resend-btn {
        margin-top: 10px;
        background-color: #ffd700;
        color: #333;
      }
      .timer {
        text-align: center;
        font-size: 18px;
        margin: 15px 0;
      }
      #message-container {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        max-width: 600px;
        width: 90%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        text-align: center;
        z-index: 1000;
        display: none;
      }
      .success {
        background-color: #28a745;
        color: white;
      }
      .error {
        background-color: #dc3545;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="otp-container">
      <h2>Verify OTP</h2>
      <div class="timer" id="timer">5:00</div>
      <div id="message-container" style="display:none; margin-top:10px;"></div>

      <form action="/verify-otp" method="POST">
        <input type="hidden" name="email" value="<%= email %>" />
        <label for="otp">Enter OTP:</label>
        <input type="text" id="otp" name="otp" required />
        <button type="submit">Verify</button>
      </form>
      <button class="resend-btn" onclick="resendOTP()">Resend OTP</button>
    </div>

    <div id="message-container"></div>

    <script>
      let timeLeft = 5 * 60;
      const timerElement = document.getElementById("timer");
      let timerInterval;

      function startCountdown() {
        timerInterval = setInterval(() => {
          const minutes = Math.floor(timeLeft / 60);
          const seconds = timeLeft % 60;
          timerElement.textContent = `${minutes}:${
            seconds < 10 ? "0" : ""
          }${seconds}`;
          timeLeft--;

          if (timeLeft < 0) {
            clearInterval(timerInterval);
            timerElement.textContent = "Time's up!";
            document.querySelector('input[type="text"]').disabled = true;
            document.querySelector('button[type="submit"]').disabled = true;
          }
        }, 1000);
      }

      startCountdown();

      function resendOTP() {
        const email = "<%= email %>";
        const messageContainer = document.getElementById("message-container");

        fetch("/otp/resend", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ email }),
        })
          .then((response) => response.json())
          .then((data) => {
            messageContainer.style.display = "block";
            messageContainer.textContent = data.success
              ? "OTP resent successfully! Check your email."
              : "Failed to resend OTP. Please try again.";
            messageContainer.className = data.success ? "success" : "error";

            if (data.success) {
              clearInterval(timerInterval);
              timeLeft = 5 * 60; 
              startCountdown();
              document.querySelector('input[type="text"]').disabled = false;
              document.querySelector('button[type="submit"]').disabled = false;
            }

            setTimeout(() => {
              messageContainer.style.display = "none";
            }, 3000);
          })
          .catch((error) => {
            console.error("Error:", error);
            messageContainer.style.display = "block";
            messageContainer.textContent =
              "An error occurred while resending the OTP.";
            messageContainer.className = "error";

            setTimeout(() => {
              messageContainer.style.display = "none";
            }, 3000);
          });

          document.getElementById("otp-form").addEventListener("submit", async (event) => {
  event.preventDefault(); // Prevent default form submission

  const otp = document.getElementById("otp").value;
  const email = "<%= email %>";
  const messageContainer = document.getElementById("message-container");

  try {
    const response = await fetch("/verify-otp", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ otp, email }),
    });

    const result = await response.json();

    messageContainer.style.display = "block";
    messageContainer.textContent = result.error || "OTP verified successfully!";
    messageContainer.className = result.error ? "error" : "success";

    if (!result.error) {
      setTimeout(() => {
        window.location.href = "/dashboard"; 
      }, 2000);
    }
  } catch (error) {
    console.error("Error verifying OTP:", error);
    messageContainer.style.display = "block";
    messageContainer.textContent = "An error occurred while verifying the OTP.";
    messageContainer.className = "error";
  }
});

      }
    </script>
  </body>
</html>
